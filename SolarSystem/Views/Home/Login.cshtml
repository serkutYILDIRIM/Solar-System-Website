@model LoginModel

    <form asp-action="Login" method="post" class="p-4 w-50 mx-auto">
        <div class="form-group">
            <label>User Name : </label>
            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            <input type="text" asp-for="@Model.UserName" class="form-control" />
        </div>

        <div class="form-group">
            <label>Password :</label>
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
            <input type="password" asp-for="@Model.Password" class="form-control" />
        </div>

        <div class="form-check">
            <input type="checkbox" asp-for="@Model.RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">      Remember Me</label>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-block btn-info">Login</button>
        </div>
    </form>
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/jqueryValid/jquery.validate.min.js"></script>
    <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
