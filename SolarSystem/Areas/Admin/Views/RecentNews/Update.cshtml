@model UpdateRecentNewsModel

<form asp-action="Update" asp-controller="RecentNews" asp-area="Admin" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.NewsId" />

    <div class="form-group">
        <label>News Name :</label>
        <span asp-validation-for="@Model.NewsName" class="text-danger"></span>
        <input asp-for="@Model.NewsName" class="form-control" />
    </div>

    <div class="form-group">
        <label>News Subject :</label>
        <span asp-validation-for="@Model.NewsSubject" class="text-danger"></span>
        <input asp-for="@Model.NewsSubject" class="form-control" />
    </div>

    <div class="form-group">
        <label>News Content :</label>
        <span asp-validation-for="@Model.NewsContent" class="text-danger"></span>
        <input asp-for="@Model.NewsContent" class="form-control" />
    </div>

    <div class="form-group">
        <label>News Image :</label>

        <input type="file" asp-for="@Model.Picture" class="form-control-file" />
    </div>

    <div class="form-group">
        <a asp-action="Index" asp-controller="Satellite" asp-area="Admin" class="btn btn-warning">Back</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section JavaScript {
    <script src="~/jqueryValid/jquery.validate.min.js"></script>
    <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}