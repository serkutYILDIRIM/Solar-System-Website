@model List<RecentNews>

    <a asp-action="Create" asp-controller="RecentNews" asp-area="Admin" class="btn btn-primary btn-sm my-2">Create News</a>

<div class="container">
    <table class="table table-sm table-bordered table-hover mt-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>News Name</th>
                <th>News Subject</th>
                <th>News Image</th>
                <th>News Content</th>
                <th>Delete Operation</th>
                <th>Update Operation</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.NewsId</th>
                <td>@item.NewsName</td>
                <td>@item.NewsSubject</td>
                <td class="w-25">
                    <img src="/crudImg/@item.Picture" class="img-fluid img-thumbnail" alt="">
                </td>
                <td>@item.NewsContent</td>
                <td>
                    <a asp-action="Delete" asp-controller="RecentNews" asp-area="Admin" asp-route-id="@item.NewsId" class="btn btn-danger btn-sm">Delete</a>
                </td>
                <td>
                    <a asp-action="Update" asp-controller="RecentNews" asp-area="Admin" asp-route-id="@item.NewsId" class="btn btn-warning btn-sm">Update</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>