@model List<RecentNews>

<div class="container">
    <table class="table table-sm table-bordered table-hover mt-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>News Name</th>
                <th>News Subject</th>
                <th>News Image</th>
                <th>News Content</th>
                <th><a asp-action="Index" asp-controller="RecentNews" asp-area="Admin" class="btn btn-dark btn-sm">Recent News Operations</a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.NewsId</th>
                <td>@item.NewsName</td>
                <td>@item.NewsSubject</td>
                <td class="w-25">
                    <img src="/crudImg/@item.Picture" class="img-fluid img-thumbnail" alt="">
                </td>
                <td>@item.NewsContent</td>
            </tr>
            }
        </tbody>
    </table>
</div>