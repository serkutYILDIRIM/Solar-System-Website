@model List<Satellite>

<div class="container">
    <table class="table table-sm table-bordered table-hover mt-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Satellite Name</th>
                <th>Satellite Image</th>
                <th>Satellite Info</th>
                <th><a asp-action="Index" asp-controller="Satellite" asp-area="Admin" class="btn btn-dark btn-sm">Satellite Operations</a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.SatelliteId</th>
                <td>@item.SatelliteName</td>
                <td class="w-25">
                    <img src="/crudImg/@item.Picture" class="img-fluid img-thumbnail" alt="">
                </td>
                <td>@item.SatelliteInfo</td>
            </tr>
            }
        </tbody>
    </table>
</div>