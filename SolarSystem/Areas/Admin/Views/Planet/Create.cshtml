@model CreatePlanetModel

<form asp-action="Create" asp-controller="Planet" asp-area="Admin" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <div class="form-group">
        <label>Planet Name :</label>
        <span asp-validation-for="@Model.PlanetName" class="text-danger"></span>
        <input asp-for="@Model.PlanetName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Distance To Sun :</label>
        <span asp-validation-for="@Model.DistanceToSun" class="text-danger"></span>
        <input asp-for="@Model.DistanceToSun" class="form-control" />
    </div>

    <div class="form-group">
        <label>One Way Light Time To Sun :</label>
        <span asp-validation-for="@Model.OneWayLightTimeToSun" class="text-danger"></span>
        <input asp-for="@Model.OneWayLightTimeToSun" class="form-control" />
    </div>

    <div class="form-group">
        <label>Length Of Year :</label>
        <span asp-validation-for="@Model.LengthOfYear" class="text-danger"></span>
        <input asp-for="@Model.LengthOfYear" class="form-control" />
    </div>

    <div class="form-group">
        <label>Planet Type :</label>
        <span asp-validation-for="@Model.PlanetType" class="text-danger"></span>
        <input asp-for="@Model.PlanetType" class="form-control" />
    </div>

    <div class="form-group">
        <label>Planet Info :</label>
        <span asp-validation-for="@Model.PlanetInfo" class="text-danger"></span>
        <input asp-for="@Model.PlanetInfo" class="form-control" />
    </div>

    <div class="form-group">
        <label>Planet Image :</label>

        <input type="file" asp-for="@Model.Picture" class="form-control-file" />
    </div>

    <div class="form-group">
        <a asp-action="Index" asp-controller="Planet" asp-area="Admin" class="btn btn-warning">Back</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section JavaScript {
    <script src="~/jqueryValid/jquery.validate.min.js"></script>
    <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}