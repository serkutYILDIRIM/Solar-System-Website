@model List<Planet>

    <a asp-action="Create" asp-controller="Planet" asp-area="Admin" class="btn btn-primary btn-sm my-2">Create New Planet</a>

<div class="container">
    <table class="table table-sm table-bordered table-hover mt-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Planet Name</th>
                <th>Satellites</th>
                <th>Lengt Of Year</th>
                <th>One Way Light Time To Sun</th>
                <th>Distance To Sun</th>
                <th>Planet Image</th>
                <th>Planet Info</th>
                <th>Delete Operation</th>
                <th>Update Operation</th>
                <th>Satellite Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.PlanetId</th>
                <td>@item.PlanetName</td>
                <td><listSatelliteName planet-id="@item.PlanetId"></listSatelliteName></td>
                <td>@item.LengthOfYear</td>
                <td>@item.OneWayLightTimeToSun</td>
                <td>@item.DistanceToSun</td>
                <td class="w-25">
                    <img src="/crudImg/@item.Picture" class="img-fluid img-thumbnail" alt="">
                </td>
                <td>@item.PlanetInfo</td>
                <td>
                    <a asp-action="Delete" asp-controller="Planet" asp-area="Admin" asp-route-id="@item.PlanetId" class="btn btn-danger btn-sm">Delete</a>
                </td>
                <td>
                    <a asp-action="Update" asp-controller="Planet" asp-area="Admin" asp-route-id="@item.PlanetId" class="btn btn-warning btn-sm">Update</a>
                </td>
                <td>
                    <a asp-action="AddSatellite" asp-controller="Planet" asp-area="Admin" asp-route-id="@item.PlanetId" class="btn btn-dark btn-sm">Add Satellite</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
